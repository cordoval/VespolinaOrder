<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Vespolina\Entity\Order\Item">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="name"       type="string"   nullable="true"/>
        <field name="options"        type="array"    nullable="true"/>
        <field name="pricingSet" type="array"    nullable="true"/>
        <field name="quantity"       type="string" />
        <field name="state"          type="string"   nullable="true"/>

        <one-to-one field="product" target-entity="Vespolina\Entity\Product\Product">
        </one-to-one>
        <many-to-one field="order" target-entity="Vespolina\Entity\Order\Order" inversed-by="items">
        </many-to-one>
    </entity>
</doctrine-mapping>